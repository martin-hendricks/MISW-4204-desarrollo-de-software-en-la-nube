# Copia este archivo a terraform.tfvars y completa con tus valores
# terraform.tfvars está en .gitignore y no se subirá al repositorio

aws_region = "us-east-1"

# Credenciales de AWS Academy
aws_access_key_id     = "TU_ACCESS_KEY_ID"
aws_secret_access_key = "TU_SECRET_ACCESS_KEY"
aws_session_token     = "TU_SESSION_TOKEN" # Opcional, solo si es necesario

# Password para RDS PostgreSQL
rds_password = "root1234"

# CIDR block permitido para SSH (recomendado: tu IP específica)
# Ejemplo: "203.0.113.0/32" para una IP específica
allowed_ssh_cidr = "0.0.0.0/0" # ⚠️ Cambiar a tu IP para mayor seguridad

